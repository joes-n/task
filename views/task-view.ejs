<%- include('partials/header') %>

<div class="dashboard">
    <div class="dashboard-header">
        <h2>Task Details</h2>
        <div class="user-info">
            <a href="/tasks" class="btn btn-secondary">Back to Tasks</a>
            <a href="/tasks/<%= task._id %>/edit" class="btn btn-primary">Edit Task</a>
        </div>
    </div>

    <div style="max-width: 800px; margin: 0 auto;">
        <div class="task-card">
            <h3 style="margin-bottom: 20px;"><%= task.title %></h3>

            <% if (task.description) { %>
                <div style="margin-bottom: 20px;">
                    <strong>Description:</strong>
                    <p style="margin-top: 10px; white-space: pre-wrap;"><%= task.description %></p>
                </div>
            <% } %>

            <div class="task-meta" style="margin-bottom: 20px;">
                <span class="task-status status-<%= task.status %>">
                    <%= task.status %>
                </span>
                <span class="task-priority priority-<%= task.priority %>">
                    <%= task.priority %> priority
                </span>
            </div>

            <div style="border-top: 1px solid #dee2e6; padding-top: 20px; margin-top: 20px;">
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px;">
                    <div>
                        <strong>Created:</strong>
                        <p style="color: #6c757d; margin-top: 5px;">
                            <%= new Date(task.createdAt).toLocaleString() %>
                        </p>
                    </div>
                    <div>
                        <strong>Updated:</strong>
                        <p style="color: #6c757d; margin-top: 5px;">
                            <%= new Date(task.updatedAt).toLocaleString() %>
                        </p>
                    </div>
                    <% if (task.dueDate) { %>
                        <div>
                            <strong>Due (include date and time):</strong>
                            <p style="color: #6c757d; margin-top: 5px;">
                                <%= new Date(task.dueDate).toLocaleString() %>
                            </p>
                        </div>
                    <% } %>
                </div>
            </div>

            <div style="margin-top: 30px; display: flex; gap: 10px;">
                <form action="/tasks/<%= task._id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this task?')">
                        Delete Task
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

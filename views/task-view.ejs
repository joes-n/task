<%- include('partials/header') %>

<div class="dashboard">
    <div class="dashboard-header">
        <h2 class="signalis-glitch" data-text="Task Details">Task Details</h2>
        <div class="user-info">
            <a href="/tasks" class="btn btn-secondary" style="white-space: nowrap;">
                <span class="btn-label--baseline-fix signalis-glitch" data-text="Back to Tasks">Back to Tasks</span>
            </a>
            <a href="/tasks/<%= task._id %>/edit" class="btn btn-primary">
                <span class="btn-label--baseline-fix signalis-glitch" data-text="Edit Task">Edit Task</span>
            </a>
        </div>
    </div>

    <div style="max-width: 800px; margin: 0 auto;">
        <div class="task-card">
            <h3 class="signalis-glitch" style="margin-bottom: 20px;" data-text="<%= task.title %>"><%= task.title %></h3>

            <% if (task.description) { %>
                <div style="margin-bottom: 20px;">
                    <strong class="signalis-glitch" data-text="Description:">Description:</strong>
                    <p class="signalis-glitch" style="margin-top: 10px; white-space: pre-wrap;" data-text="<%= task.description %>"><%= task.description %></p>
                </div>
            <% } %>

            <div class="task-meta" style="margin-bottom: 20px;">
                <span class="task-status status-<%= task.status %> signalis-glitch" data-text="<%= task.status %>">
                    <%= task.status %>
                </span>
                <span class="task-priority priority-<%= task.priority %> signalis-glitch" data-text="<%= task.priority %> priority">
                    <%= task.priority %> priority
                </span>
            </div>

            <div style="border-top: 1px solid #dee2e6; padding-top: 20px; margin-top: 20px;">
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px;">
                    <div>
                        <strong class="signalis-glitch" data-text="Created:">Created:</strong>
                        <p class="signalis-glitch" style="color: #6c757d; margin-top: 5px;" data-text="<%= new Date(task.createdAt).toLocaleString() %>">
                            <%= new Date(task.createdAt).toLocaleString() %>
                        </p>
                    </div>
                    <div>
                        <strong class="signalis-glitch" data-text="Updated:">Updated:</strong>
                        <p class="signalis-glitch" style="color: #6c757d; margin-top: 5px;" data-text="<%= new Date(task.updatedAt).toLocaleString() %>">
                            <%= new Date(task.updatedAt).toLocaleString() %>
                        </p>
                    </div>
                    <% if (task.dueDate) { %>
                        <div>
                            <strong class="signalis-glitch" data-text="Due:">Due:</strong>
                            <p class="signalis-glitch" style="color: #6c757d; margin-top: 5px;" data-text="<%= new Date(task.dueDate).toLocaleString() %>">
                                <%= new Date(task.dueDate).toLocaleString() %>
                            </p>
                        </div>
                    <% } %>
                </div>
            </div>

            <div style="margin-top: 30px; display: flex; gap: 10px;">
                <form action="/tasks/<%= task._id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this task?')">
                        <span class="btn-label--baseline-fix signalis-glitch" data-text="Delete Task">Delete Task</span>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

<%- include('partials/header') %>

    <div class="auth-container">
        <div class="auth-box">
        <h2><span class="signalis-glitch" data-text="LOGGED OUT">LOGGED OUT</span></h2>

        <div class="logout-message">
            <% const logoutCountdown = typeof countdown !== 'undefined' ? countdown : 3; %>
            <p class="logout-text signalis-glitch" data-text="REDIRECT TO LOG IN <%= logoutCountdown %>...">REDIRECT TO LOG IN <span id="countdown" class="countdown-number signalis-glitch" data-text="<%= logoutCountdown %>"><%= logoutCountdown %></span>...</p>
        </div>

        <div class="redirect-info">
            <p class="signalis-glitch" data-text="If you are not redirected automatically," style="font-size: 1.6rem;">If you are not redirected automatically,</p>
            <a href="/login" class="btn btn-primary">
                <span class="btn-label--baseline-fix signalis-glitch" data-text="CLICK HERE">CLICK HERE</span>
            </a>
        </div>
    </div>
</div>

    <div class="visual-effects-container">
        <div class="phosphor-mask"></div>

        <div class="interference-line"></div>
        <div class="interference-line"></div>
        <div class="interference-line"></div>
    </div>

<script>
    // Countdown timer
    let seconds = <%= countdown || 3 %>;
    const countdownElement = document.getElementById('countdown');
    const logoutText = document.querySelector('.logout-text');

    const timer = setInterval(() => {
        seconds--;
        if (countdownElement) {
            countdownElement.textContent = seconds;
            countdownElement.dataset.text = seconds;
            if (logoutText) {
                logoutText.dataset.text = `REDIRECT TO LOG IN ${seconds}...`;
            }
        }

        if (seconds <= 0) {
            clearInterval(timer);
            window.location.href = '/login';
        }
    }, 1000);
</script>

<%- include('partials/footer') %>

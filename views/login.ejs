<%- include('partials/header') %>

<div class="auth-container">
    <div class="auth-box">

        <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-error">
                <span class="btn-label--baseline-fix signalis-glitch" data-text="<%= error %>"><%= error %></span>
            </div>
        <% } %>

        <form action="/login" method="POST" class="auth-form">
            <div class="form-group">
                <label for="email" class="signalis-glitch" data-text="Email:">Email:</label>
                <input
                    type="email"
                    id="email"
                    name="email"
                    value="<%= typeof email !== 'undefined' ? email : '' %>"
                    required
                    autofocus
                >
            </div>

            <div class="form-group">
                <label for="password" class="signalis-glitch" data-text="PASSWORD:">PASSWORD:</label>
                <input
                    type="password"
                    id="password"
                    name="password"
                    required
                >
            </div>

            <button type="submit" class="btn btn-primary">
                <span class="btn-label--baseline-fix signalis-glitch" data-text="LOG IN">LOG IN</span>
            </button>
        </form>

        <p class="auth-link">
            <span class="signalis-glitch" data-text="Don't have an account?">Don't have an account?</span>
            <a href="/register" class="signalis-glitch" data-text="Register here">Register here</a>
        </p>
    </div>
</div>

    <div class="visual-effects-container">
        <div class="phosphor-mask"></div>

        <div class="interference-line"></div>
        <div class="interference-line"></div>
        <div class="interference-line"></div>
    </div>

<%- include('partials/footer') %>
